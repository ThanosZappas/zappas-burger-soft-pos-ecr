<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/icon_text</item>
        <item name="android:textColorHint">@color/icon_text</item>
        <item name="android:editTextColor">@color/icon_text</item>
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:maxWidth">10000dp</item>
        <item name="closeIcon">@drawable/ic_close_white</item>
    </style>
    <style name="SpinnerTheme">
        <item name="android:textColor">@color/icon_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">@color/icon_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>

