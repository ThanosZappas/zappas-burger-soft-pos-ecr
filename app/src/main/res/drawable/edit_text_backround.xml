<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/icon_backround"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <!-- Aura Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E000000"/> <!-- 10% black aura -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <!-- Border Layer -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/icon_text"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
</layer-list>
